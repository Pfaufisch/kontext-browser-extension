{
  "manifest_version": 2,
  "name": "Kontext",
  "description": "Eine Browser-Extension, die Zusatzinformationen zu bestimmten Politikern in Webseiten einf√ºgt.",
  "version": "2.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/settings.js", "src/data.js", "src/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "src/options.html",
    "default_title": "Kontext"
  },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ]
}
